{
    "manifest_version": 3,
    "name": "Web Design Disruptor",
    "version": "1.0",
    "description": "this is a Chrome extension that will randomly visually disrupt an HTML page by randomly applying css animations from a list to all HTML elements & child elements",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["design-disruptor.css"],
        "js": ["design-disruptor.js"]
      }
    ],
    "permissions": [
      "activeTab"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }